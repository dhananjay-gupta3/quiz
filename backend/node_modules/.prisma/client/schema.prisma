generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/quiz"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  quizzes  Quiz[]
}

model Quiz {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
